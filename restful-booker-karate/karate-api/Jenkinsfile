pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('restful-booker-karate') {
                    sh 'docker build -t karate-api-tests .'
                }
            }
        }

        stage('Run Karate Tests') {
            steps {
                dir('restful-booker-karate') {
                    sh '''
                        docker run --rm \
                        -v $WORKSPACE/restful-booker-karate/target:/app/target \
                        karate-api-tests
                    '''
                }
            }
        }
    }

    post {
        always {
            publishHTML(target: [
                reportDir: 'restful-booker-karate/target/karate-reports',
                reportFiles: 'karate-summary.html',
                reportName: 'Karate API Test Report',
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: true
            ])
        }
    }
}
